<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="hunters_distance_search" resource="default" engine="innodb" comment="Sorted company table">
        <column xsi:type="int" name="id" nullable="false" identity="true" comment="id"/>
        <column xsi:type="varchar"  length="30" name="postcode" nullable="false" comment="zip code"/>
        <column xsi:type="varchar" length="30" name="city," nullable="false" comment="city"/>
        <column xsi:type="varchar" length="50" name="company_name," nullable="false" comment="company name"/>
        <column xsi:type="varchar" length="50" name="street" nullable="false" comment="street"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
