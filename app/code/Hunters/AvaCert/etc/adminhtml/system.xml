<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="hunters" translate="label" sortOrder="400">
            <label>Hunters</label>
        </tab>
        <section id="avacert" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
